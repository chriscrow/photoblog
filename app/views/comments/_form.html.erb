<%= form_for([@article, @article.comments.build], html:{class: "form-horizontal"}) do |f|%>
  <% if current_user == nil %>
    <div class="form-group">
      <%= f.label :commenter, "Nick Name", class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :commenter, class:"form-control" %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :body, "Comment:", class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, class:"form-control", rows:"3" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Post", class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
