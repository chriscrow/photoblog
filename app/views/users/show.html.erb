<% provide(:title, @user.nickname) %>
<div class="row">
    <aside class="col-md-4">

        <section>
            <%= gravatar_for @user %>
            <%= @user.nickname %>
        </section>
        <section>
            <%= render 'shared/stats' %>
        </section>
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if signed_in? %>
        <% if @user.articles.any? %>
            <h3>Articles (<%= @user.articles.count %>)</h3>
            <ol class="articles">
                <%= render @articles %>
            </ol>
            <%= will_paginate @articles %>
        <% end %>
    </div>
</div>