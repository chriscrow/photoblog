<%= form_for(@article, html: {class: "form"}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :content %><br>
        <div id="editormd">
            <%= f.text_area :content %>
        </div>
    </div>
    <div>
        <%= f.submit "Post", class: "btn btn-primary" %>
    </div>
<% end %>
