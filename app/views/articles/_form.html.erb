<%= form_for @article do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
    <div>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :content %><br>
        <div id="editormd">
            <%= f.text_area :content %>
        </div>
    </div>
    <p>
        <%= f.submit "Post", class: "btn btn-primary" %>
    </p>
<% end %>
